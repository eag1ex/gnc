{
    "cSpell.language": "en",
    "jslint.enable": false,
    "standard.enable":true,
    "eslint.nodePath":"./node_modules/eslint",
    "node-module-intellisense.scanBuiltinModules": true,
    "node-module-intellisense.scanDevDependencies": true,
    "node-module-intellisense.scanFileModules": true,
    "node-module-intellisense.fileModuleExtensions": [
        ".js",
        ".jsx",
        ".ts",
        ".d.ts",
        ".tsx",
        ".vue",
        ".json"
      ],
    "eslint.enable": true,
    "eslint.autoFixOnSave":true,
    "javascript.validate.enable":true,
    "javascript.format.enable": true,
    "eslint.codeAction.showDocumentation":{
        "enable": true
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "html",
            "autoFix": true
        }
    ],
    "editor.wordWrap": "on",
    "beautify.language": {
        "js": {
            "type": [
                "javascript"
            ],
            "filename": [
                ".jshintrc",
                ".jsbeautifyrc"
            ]
        },
        "css": [
            "css",
            "scss"
        ],
        "html": [
            "htm",
            "html"
        ]
        // ^^ providing just an array sets the VS Code file type
    },
    "standard.options": {
        "globals": [
            "$",
            "jQuery",
            "fetch"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "plugins": [
            "html"
        ],
        "parser": "babel-eslint",
        "envs": [
            "jest"
        ]
    },
    "standard.validate": [
        "javascript",
        "html"
    ],
    "peacock.elementAdjustments": {
        "activityBar": "lighten"
    },
    "peacock.affectActivityBar": true,
    "peacock.affectStatusBar": true,
    "peacock.affectTitleBar": true,
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#b52e31"
        },
        {
            "name": "Auth0 Orange",
            "value": "#eb5424"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "C# Purple",
            "value": "#68217A"
        },
        {
            "name": "Gatsby Purple",
            "value": "#639"
        },
        {
            "name": "Java Blue-Gray",
            "value": "#557c9b"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#00b3e6"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    "workbench.colorCustomizations": {
        "activityBar.background": "#2f7c47",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#422c74",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#215732",
        "titleBar.inactiveBackground": "#21573299",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveForeground": "#e7e7e799",
        "statusBar.background": "#215732",
        "statusBarItem.hoverBackground": "#2f7c47",
        "statusBar.foreground": "#e7e7e7"
    },
    "commentAnchors.workspace.enabled": true,
    "commentAnchors.tagHighlights.enabled": true,
    "commentAnchors.workspace.lazyLoad": true,
    "commentAnchors.workspace.excludeFiles": "**/{node_modules,.git,.idea,target,out,build,vendor,public,dist}/**/*",
    "commentAnchors.tags.displayInSidebar": true,
    "commentAnchors.tags.separators": [
        " ",
        ": ",
        " - "
    ],
    "typescript.validate.enable": false
}